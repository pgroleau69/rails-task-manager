<h1>My Tasks</h1>

<h2>
<%= @task.title %>
</h2>

<p> <%= @task.details %>
</p>

<%= link_to "Back", tasks_path %>
<br>
<%= link_to "Edit", edit_task_path(@task) %>
<br>
<%= link_to "Delete #{@task.title}",
            task_path(@task),
            method: :delete,
            data: { confirm: "Are you sure?" } %>

<a data-confirm="Are you sure?" rel="nofollow" data-method="delete" href="/tasks/2"></a>
